  {
    \use:x
      {
        \XeTeXinterchartoks
        \xeCJK_class_num:n { #1 } \xeCJK_class_num:n { #2 } =
          {
            \exp_not:n { #3 } \tex_the:D\XeTeXinterchartoks
            \xeCJK_class_num:n { #1 } \xeCJK_class_num:n { #2 }
          }
     }
  }
%    \end{macrocode}
