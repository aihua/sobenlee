% \begin{macro}{\zhuyin}
%    \begin{macrocode}
\NewDocumentCommand \zhuyin { s O{} m }
  {
    \IfBooleanTF {#1}
      {
        \group_begin:
        \keys_set:nn { zhuyin } {#2}
        \tl_if_empty:NF \l_zhuyin_hsep_tl
          { \xeCJKsetup { CJKglue = \skip_horizontal:n { \l_zhuyin_hsep_tl } } }
        \zhuyin_replace_CJKsymbol:
        #3
        \group_end:
      }
      {
        \group_begin:
        \keys_set:nn { zhuyin } {#2}
        \zhuyin_zhuyin_single_aux:Nn {#3}
      }
  }
