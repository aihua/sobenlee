\ExplSyntaxOn
\NewDocumentCommand\newCJKfontfamily{o m O{} m O{} g}{
  \IfNoValueTF{#1}
    {\edef\@CJKfamilyName{\cs_to_str:N #2}}
    {\edef\@CJKfamilyName{#1}}
  \setCJKfamilyfont{\@CJKfamilyName}[
       BoldFont=*, ItalicFont=*, SlantedFont=*,
       ItalicFeatures={FakeSlant=.167}, BoldItalicFeatures={FakeSlant=.167},
      SlantedFeatures={FakeSlant=.167},BoldSlantedFeatures={FakeSlant=.167},
    #3]{#4}
  \newcommand*{#2}{}
  \protected\edef#2{\noexpand\CJKfamily{\@CJKfamilyName}}
  \IfNoValueTF{#6}{}{
    \setCJKfallbackfamilyfont{\@CJKfamilyName}[
       BoldFont=*, ItalicFont=*, SlantedFont=*,
       ItalicFeatures={FakeSlant=.167}, BoldItalicFeatures={FakeSlant=.167},
      SlantedFeatures={FakeSlant=.167},BoldSlantedFeatures={FakeSlant=.167},
    #5]{#6}
  }
}
\ExplSyntaxOff
