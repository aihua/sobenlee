\ExplSyntaxOn
\NewDocumentCommand\newCJKfontfamily{o m O{} m}{
  \IfNoValueTF{#1}
    {\edef\@CJKfamilyName{\cs_to_str:N #2}}
    {\edef\@CJKfamilyName{#1}}
  \setCJKfamilyfont{\@CJKfamilyName}[
       BoldFont=*, ItalicFont=*, SlantedFont=*,
       ItalicFeatures={FakeSlant=.167},
      SlantedFeatures={FakeSlant=.167},#3]{#4}
  \edef#2{\noexpand\CJKfamily{\@CJKfamilyName}}
  \robustify{#2}
}
