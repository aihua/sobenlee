\cs_new_nopar:Nn \zhuyin_pinyin:n
  {
    \zhuyin_pinyin_init:
    \bool_set_true:N \l_zhuyin_first_bool
    \zhuyin_pinyin_aux:N #1 \q_recursion_tail
    \prg_break_point:n
      {
        \bool_if:NTF \l_zhuyin_first_bool {#1}
          { \tl_if_empty:NF \l_tmpc_tl { \l_zhuyin_pysep_tl \l_tmpc_tl } }
      }
  }
%    \end{macrocode}
